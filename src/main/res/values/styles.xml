<resources>

    <style name="DialogTranslucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/Transparent</item>
    </style>

    <style name="YesNoDialogMessage">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="YesNoDialogPositiveButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="YesNoDialogOuter">
        <item name="android:background">@drawable/border_box</item>
    </style>

    <style name="NumberPickerButton">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">#FDDD</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPickerEditText">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/White</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavBarBase">
        <!--<item name="android:layout_marginBottom">1dp</item>-->
        <!--<item name="android:background">@color/White</item>-->
    </style>

    <style name="NavBarTitle">
        <!--<item name="android:background">@color/DarkerGray</item>-->
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="NavBarBack">
        <item name="android:src">@drawable/back_button</item>
        <item name="android:background">@drawable/gray_btn_states</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>
